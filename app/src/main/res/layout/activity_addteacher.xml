<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toptoolbar" />
    <!--Main View-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonLl"
        android:layout_marginTop="100dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--For absent present count -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="#FFF"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_15dp">

                    <TextView
                        android:id="@+id/teacher_id"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:background="@drawable/ss_hollow_rect_green"
                        android:gravity="center_vertical"
                        android:hint="Teacher id*(i.e.-Name012345)"
                        android:imeOptions="actionNext"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size"
                        android:visibility="gone" />


                    <EditText
                        android:id="@+id/input_name"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/ss_hollow_rect_green"
                        android:hint="Teacher's full name*"
                        android:imeOptions="actionNext"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:id="@+id/input_qualification"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@drawable/ss_hollow_rect_green"
                        android:hint="Qualification"
                        android:imeOptions="actionNext"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size" />


                    <EditText
                        android:id="@+id/input_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@drawable/ss_hollow_rect_green"
                        android:hint="Mobile number"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:id="@+id/input_alternatenumber"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@drawable/ss_hollow_rect_green"
                        android:hint="Alternate mobile number"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:id="@+id/input_emailid"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@drawable/ss_hollow_rect_green"
                        android:hint="Email id"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size" />


                    <EditText
                        android:id="@+id/input_what_teaches"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@drawable/ss_hollow_rect_green"
                        android:hint="What subject he/she teaches"
                        android:imeOptions="actionNext"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size" />


                    <EditText
                        android:id="@+id/input_classtea"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@drawable/ss_hollow_rect_green"
                        android:hint="Class teacher of which class"
                        android:imeOptions="actionNext"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size" />


                    <EditText
                        android:id="@+id/input_joindate"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@drawable/ss_hollow_rect_green"
                        android:focusable="false"
                        android:hint="Joining date"
                        android:imeOptions="actionNext"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size" />


                    <EditText
                        android:id="@+id/input_address"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@drawable/ss_hollow_rect_green"
                        android:hint="Address"
                        android:imeOptions="actionDone"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <!--Buttons in bottom-->
    <RelativeLayout
        android:id="@+id/buttonLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <!--Submit button for adding student-->
        <LinearLayout
            android:id="@+id/addButtonLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <!--For absent present count -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10dp"
                android:clickable="false"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="10dp">

                <include layout="@layout/common_button" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <!--Update & Delete button for updating students details and deleting student from school-->
        <LinearLayout
            android:id="@+id/updateButtonLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <!--For absent present count -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10dp"
                android:background="@android:color/transparent"
                android:clickable="false"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="10dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/updateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/present_button_bg"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:text="@string/update_details"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16.7" />

                    <Button
                        android:id="@+id/deleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/absent_button_bg"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:text="@string/delete_teacher"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16.7" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
    <!--Profile Image-->

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_50">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/userProfilePicIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            card_view:civ_border_color="#dc5da4"
            card_view:civ_border_overlay="true"
            card_view:civ_border_width="2dp" />
    </RelativeLayout>

</RelativeLayout>